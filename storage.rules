
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files. 
    // This is common for files like product images that need to be displayed to all users.
    match /{allPaths=**} {
      allow read;
    }

    // Restrict write access to a specific path, e.g., 'product_images'.
    // Only authenticated users can upload to this path.
    match /product_images/{productId}/{fileName} {
      allow write: if request.auth != null;
    }

    // Restrict writes for user profile images.
    // Only the authenticated user can upload their own profile image.
    match /user_images/{userId}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
